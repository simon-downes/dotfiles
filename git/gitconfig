[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[branch]
	autosetuprebase = always

[color]
	ui = auto

[color "branch"]
	current = green
	local = yellow
	remote = magenta

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[push]
	default = current
